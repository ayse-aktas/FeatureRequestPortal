@using FeatureRequestPortal.FeatureRequests
@using FeatureRequestPortal.Localization
@using Microsoft.Extensions.Localization
@model CreateFeatureRequestDto
@inject IStringLocalizer<FeatureRequestPortalResource> L
@{
    ViewBag.PageTitle = L["NewFeatureRequest"];
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h3 class="card-title mb-0">@L["NewFeatureRequest"]</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div class="mb-3">
                            <label asp-for="Title" class="form-label">@L["Title"]</label>
                            <input asp-for="Title" class="form-control" placeholder="@L["EnterTitle"]" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">@L["Description"]</label>
                            <textarea asp-for="Description" class="form-control" rows="5" placeholder="@L["EnterDescription"]"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label class="form-label">@L["Categories"]</label>
                            <select name="CategoryIds" class="form-select" multiple size="5">
                                @foreach (var category in (List<CategoryDto>)ViewBag.Categories)
                                {
                                    <option value="@category.Id">@category.Name</option>
                                }
                            </select>
                            <div class="form-text text-muted small">@L["SelectMultipleCategoriesHint"]</div>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-outline-secondary">@L["Cancel"]</a>
                            <button type="submit" class="btn btn-primary">@L["Create"]</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <abp-script-bundle name="@nameof(FeatureRequestPortal.Web.Pages.IndexModel)">
        <script src="/libs/jquery-validation/jquery.validate.js"></script>
        <script src="/libs/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    </abp-script-bundle>
}

@using FeatureRequestPortal.FeatureRequests
@using FeatureRequestPortal.Localization
@using Microsoft.Extensions.Localization
@model IReadOnlyList<FeatureRequestDto>
@inject IStringLocalizer<FeatureRequestPortalResource> L
@{
    ViewBag.PageTitle = L["FeatureRequests"];
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>@L["FeatureRequests"]</h1>
        <a asp-action="Create" class="btn btn-primary">@L["NewFeatureRequest"]</a>
    </div>

    <div class="card mb-4">
        <div class="card-body">
            <form method="get" class="row g-3 align-items-center">
                <div class="col-auto">
                    <label class="form-label">@L["Status"]</label>
                    <select name="status" class="form-select" onchange="this.form.submit()">
                        <option value="">@L["All"]</option>
                        @foreach (var status in Enum.GetValues<FeatureRequestStatus>())
                        {
                            <option value="@status" selected="@(ViewBag.Status == status)">@status</option>
                        }
                    </select>
                </div>
                <input type="hidden" name="sorting" value="@ViewBag.Sorting" />
            </form>
        </div>
    </div>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>@L["Title"]</th>
                <th>
                    <a asp-action="Index" asp-route-status="@ViewBag.Status" asp-route-sorting="@(ViewBag.Sorting == "VoteCount desc" ? "VoteCount asc" : "VoteCount desc")">
                        @L["VoteCount"]
                        @if (ViewBag.Sorting == "VoteCount desc")
                        {
                            <i class="fas fa-sort-down"></i>
                        }
                        else if (ViewBag.Sorting == "VoteCount asc")
                        {
                            <i class="fas fa-sort-up"></i>
                        }
                    </a>
                </th>
                <th>@L["Status"]</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Title</td>
                    <td>@item.VoteCount</td>
                    <td>
                        <span class="badge bg-secondary">@item.Status</span>
                    </td>
                    <td>
                        <a asp-action="Detail" asp-route-id="@item.Id" class="btn btn-sm btn-info">@L["Details"]</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    @* Simple pagination could be added here if we had total count in the model, 
       but for now we focus on the core listing. *@
</div>

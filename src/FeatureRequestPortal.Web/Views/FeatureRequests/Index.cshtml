@using FeatureRequestPortal.FeatureRequests
@using FeatureRequestPortal.Localization
@using Microsoft.Extensions.Localization
@model IReadOnlyList<FeatureRequestDto>
@inject IStringLocalizer<FeatureRequestPortalResource> L
@{
    ViewBag.PageTitle = L["FeatureRequests"];
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>@L["FeatureRequests"]</h1>
        @if (User.Identity.IsAuthenticated)
        {
            <a asp-action="Create" class="btn btn-primary">@L["NewFeatureRequest"]</a>
        }
        else
        {
            <div class="alert alert-info mb-0 py-2">
                <i class="fas fa-info-circle me-1"></i> @L["LoginToCreateRequest"]
            </div>
        }
    </div>

    <div class="card mb-4">
        <div class="card-body">
            <form method="get" class="row g-2 align-items-center">
                <div class="col-auto">
                    <select name="status" class="form-select" onchange="this.form.submit()">
                        <option value="">@L["All"] @L["Status"]</option>
                        @foreach (var status in Enum.GetValues<FeatureRequestStatus>())
                        {
                            <option value="@status" selected="@(ViewBag.Status?.ToString() == status.ToString())">@status</option>
                        }
                    </select>
                </div>
                <div class="col-auto">
                    <select name="categoryId" class="form-select" onchange="this.form.submit()">
                        <option value="">@L["AllCategories"]</option>
                        @foreach (var category in (List<CategoryDto>)ViewBag.Categories)
                        {
                            <option value="@category.Id" selected="@(ViewBag.CategoryId?.ToString() == category.Id.ToString())">@category.Name</option>
                        }
                    </select>
                </div>
                <input type="hidden" name="sorting" value="@ViewBag.Sorting" />
            </form>
        </div>
    </div>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>@L["Title"]</th>
                <th>@L["Categories"]</th>
                <th class="text-center">
                    <a asp-action="Index" asp-route-status="@ViewBag.Status" asp-route-categoryId="@ViewBag.CategoryId" asp-route-sorting="@(ViewBag.Sorting == "VoteCount desc" ? "VoteCount asc" : "VoteCount desc")">
                        @L["FeedbackScore"]
                        @if (ViewBag.Sorting == "VoteCount desc")
                        {
                            <i class="fas fa-sort-down"></i>
                        }
                        else if (ViewBag.Sorting == "VoteCount asc")
                        {
                            <i class="fas fa-sort-up"></i>
                        }
                    </a>
                </th>
                <th>@L["Status"]</th>
                <th>@L["Details"]</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var request in Model)
            {
                <tr>
                    <td><strong>@request.Title</strong></td>
                    <td>
                        @foreach (var categoryName in request.CategoryNames)
                        {
                            <span class="badge bg-secondary me-1">@categoryName</span>
                        }
                    </td>
                    <td class="text-center">@request.VoteCount</td>
                    <td>
                        <span class="badge bg-secondary">@request.Status</span>
                    </td>
                    <td>
                        <a asp-action="Detail" asp-route-id="@request.Id" class="btn btn-sm btn-info">@L["Details"]</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    @* Simple pagination could be added here if we had total count in the model, 
       but for now we focus on the core listing. *@
</div>
